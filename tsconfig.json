{
    "compilerOptions": {
        "allowJs": true,
        "target": "esnext",
        "outDir": "./built",
        "moduleResolution": "Node",
        "lib": ["es2015", "DOM", "DOM.Iterable"],
        "noImplicitAny": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
    },
    "include": ["./src/**/*"]

}
